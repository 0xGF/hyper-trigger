# HyperTrigger API Configuration
# Copy this file to .env.local and fill in the values

# Server Configuration
PORT=4000
NODE_ENV=development

# CORS - comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:3000

# Network Configuration
# Options: testnet, mainnet
NETWORK=testnet

# HyperEVM RPC URLs
HYPEREVM_RPC_URL=https://rpc.hyperliquid-testnet.xyz/evm
# HYPEREVM_RPC_URL=https://rpc.hyperliquid.xyz/evm  # mainnet

# Contract Addresses (deployed contracts)
TRIGGER_CONTRACT_ADDRESS=0x9029f0676F1Df986DC4bB3aca37158186ad8e570

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# Logging
LOG_LEVEL=debug
