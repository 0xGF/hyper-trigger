{
  "name": "@hyper-trigger/root",
  "version": "0.1.0",
  "private": true,
  "description": "HyperTrigger - Automated Trading Triggers for Hyperliquid",
  "scripts": {
    "dev": "turbo run dev --filter=@hyper-trigger/frontend @hyper-trigger/worker",
    "dev:frontend": "turbo run dev --filter=@hyper-trigger/frontend",
    "dev:worker": "turbo run dev --filter=@hyper-trigger/worker",
    "dev:contracts": "turbo run dev --filter=@hyper-trigger/contracts",
    "dev:all": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "deploy:testnet": "turbo run deploy:testnet --filter=@hyper-trigger/contracts",
    "deploy:mainnet": "turbo run deploy:mainnet --filter=@hyper-trigger/contracts"
  },
  "devDependencies": {
    "turbo": "^1.10.0",
    "typescript": "^5.3.3",
    "prettier": "^3.1.1",
    "eslint": "^8.56.0"
  },
  "packageManager": "pnpm@8.10.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
} 