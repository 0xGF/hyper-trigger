{
  "name": "@hyper-trigger/contracts",
  "version": "0.1.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "hardhat compile && tsc --noEmit || true",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "compile": "hardhat compile",
    "lint": "echo 'Solidity linting handled by Hardhat'",
    "type-check": "echo 'TypeScript handled by Hardhat runtime'",
    "deploy:testnet": "hardhat run scripts/deploy.ts --network hyperevm-testnet",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network hyperevm",
    "test": "hardhat test",
    "test:swap": "hardhat run scripts/test-swap-contract.ts --network hardhat",
    "test:trigger": "hardhat run scripts/test-trigger-contract.ts --network hardhat",
    "test:all": "pnpm run test:swap && pnpm run test:trigger",
    "test:real": "hardhat run scripts/test-real-trading.ts --network hyperevm-testnet",
    "setup": "hardhat run scripts/setup-real-testing.ts --network hyperevm-testnet"
  },
  "dependencies": {
    "@hyper-trigger/shared": "workspace:^",
    "typescript": "^5.3.3",
    "viem": "^2.1.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0",
    "@openzeppelin/hardhat-upgrades": "^3.9.0",
    "@types/chai": "^4.3.14",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.10.5",
    "chai": "^4.3.10",
    "dotenv": "^16.3.1",
    "ethers": "^6.10.0",
    "hardhat": "^2.19.2"
  }
}